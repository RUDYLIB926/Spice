@model Spice.Models.ViewModels.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
}

<br />

@if (Model.Coupons.Count() > 0)
{
    <div class="border">
        <div class="carousel" data-ride="carousel" data-interval="5000">
            @for (int i = 0; i < Model.Coupons.Count(); i++)
            {
                if (i == 0)
                {


                    <div class="carousel-item active">
                        @{
                            string imgsrc = "";
                            if (Model.Coupons.ToList()[i].Picture != null)
                            {
                                var base64 = Convert.ToBase64String(Model.Coupons.ToList()[i].Picture);
                                imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                            }
                        }

                        <img src="@imgsrc" height="50px" class="d-block w-100" />
                    </div>
                }
                else
                {
        <div class="carousel-item">
            
            @{
                string imgsrc = "";
                if (Model.Coupons.ToList()[i].Picture != null)
                {
                    var base64 = Convert.ToBase64String(Model.Coupons.ToList()[i].Picture);
                    imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                }
            }

            <img src="@imgsrc" height="50px" class="d-block w-100" />
        </div>
                }
            }
        </div>
    </div>
}

