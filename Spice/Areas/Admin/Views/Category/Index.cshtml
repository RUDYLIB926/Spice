@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="border background-white background-padding-30">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial"/>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => category.Name)
                        </td>
                        <td>
                            <partial name="_TableButtonsPartial" model="category.Id" />
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    { 
        <p>No category exits</p>
    }
</div>
